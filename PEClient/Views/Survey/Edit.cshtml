@model  PEClient.Models.SurveyEditViewModel

@{
    ViewBag.Title = "Edit Survey";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="vs-container">
    <div class="vs-title">
        <h2>Edit: @(Model.SurveyName ?? "Undefined")</h2>
    </div>
    <ul class="vs-actions">
        @if (null != Model.Id)
        {
            <li>@Html.ActionLink("Back to survey", "Index", "Survey", new { id = Model.Id }, null)</li>
        }
        <li>@Html.ActionLink("Back to dashboard", "Index", "Dashboard")</li>
    </ul>
    <hr>
    <div id="vs-survey-questions" class="vs-survey-questions">

        @if (IsPost)
        {
            <div class="alert alert-danger">@Html.ValidationSummary()</div>
        }

        @using (Html.BeginForm("Edit", "Survey", FormMethod.Post, new { @class = "form-launch" }))
        {
            @* -- Survey Id -- *@

            @Html.HiddenFor(m => m.Id)

            @* -- Survey Name -- *@

            @Html.LabelFor(m => m.SurveyName, "Survey Name", new { @class = "control-label" }) <span>&nbsp;&nbsp;</span>
            @Html.ValidationMessageFor(m => m.SurveyName, "", new { @class = "alert-danger" })
            @Html.TextBoxFor(m => m.SurveyName, new
            {
                title = "Enter a descriptive name for the this peer evaluation cycle",
                @class = "form-control",
                autofocus = "",
                required = true
            })
            <br />

            @* -- Survey Questions -- *@

            <label class="control-label">Questions</label><span>&nbsp;&nbsp;</span>
            @Html.ValidationMessageFor(m => m.EditedQuestions, "", new { @class = "alert-danger" })

            <table>

                @if (Model != null && Model.Questions != null)
                {
                    int rowId = 0;
                    foreach (var question in Model.Questions)
                    {
                        <tr id="row-id-@(rowId)">
                            <td style="padding-bottom: 10px">
                                <textarea id="EditedQuestions_@(rowId)_Id" class="q-textarea form-control" cols="50" style="max-width: 100%;" name="EditedQuestions[@(rowId)]" required>@(question.Text)</textarea>
                            </td>
                            <td style="padding-left: 20px">
                                <a href="#" data-row-id="@(rowId)" onclick="deleteRow(event)">delete</a>
                            </td>
                        </tr>

                        rowId++;
                    }
                }

            </table>

            <div id="tr-add" style="padding-top: 5px">
                <button type="button" form-survey id="add-question" class="btn btn-primary" value="add-question" onclick="addBlankRow()">
                    Add Question
                </button>
            </div>
            <hr />

            @* -- Submit and Cancel buttons -- *@

            @Html.Partial("~/Views/Shared/_SubmitAndCancel.cshtml", new ViewDataDictionary { { "Submit", "Update Survey" } })
        }
    </div>
</div>

@section scripts{
    <script src="~/Content/js/ViewSurveyEdit.js"></script>
}
